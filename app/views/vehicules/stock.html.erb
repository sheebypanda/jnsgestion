<table id="tablesorter" class="tablesorter table table-hover table-sm">
  <thead>
    <tr>
      <th>Enregistré par</th>
      <th>Fournisseur</th>
      <th>Marque</th>
      <th>Modèle</th>
      <th>Finition</th>
      <th>Catégorie</th>
      <th>Boite</th>
      <th>Cylindrée</th>
      <th>Cv</th>
      <th>CV fiscaux</th>
      <th>Couleur</th>
      <th>Chassis</th>
      <th>Carburant</th>
      <th>Immatriculaiton</th>
      <th>Km</th>
      <th>Prix (HT)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicules.each do |vehicule| %>
      <tr>
        <td><%= vehicule.user.email %></td>
        <td><%= vehicule.contact.raisonsociale %> <%= vehicule.contact.nom %> <%= vehicule.contact.prenom %></td>
        <td><%= vehicule.marque %></td>
        <td><%= vehicule.modele %></td>
        <td><%= vehicule.finition %></td>
        <td><%= vehicule.categorie %></td>
        <td><%= vehicule.boite %></td>
        <td><%= vehicule.cylindree %></td>
        <td><%= vehicule.cv %></td>
        <td><%= vehicule.cvfiscaux %></td>
        <td><%= vehicule.couleur %></td>
        <td><%= vehicule.chassis %></td>
        <td><%= vehicule.carburant %></td>
        <td><%= vehicule.immat %></td>
        <td><%= vehicule.km %></td>
        <td><%= vehicule.prixht %></td>
        <td><%= link_to 'Consulter', vehicule %></td>
        <td><%= link_to 'Modifier', edit_vehicule_path(vehicule) %></td>
        <td><%= link_to 'Supprimer', vehicule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
