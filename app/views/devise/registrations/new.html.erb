<div class="container mt-3">
  <div class="row justify-content-md-center mb-3">
    <div class="col-lg-6">
      <h1 class="text-center mb-3"><%= fa_icon('dashboard') %> JnS Gestion</h1>
      <h2 class="text-center">Création de compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), label: 'Mot de passe' %>
          <%= f.input :password_confirmation, required: true, label: 'Répéter le mot de passe' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: 'btn btn-lg btn-info btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3 justify-content-md-center">
    <div class="col-lg-6">
      <div class="row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
