<!DOCTYPE html>
<html>
  <head>
    <title>JnS Gestion</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <% if user_signed_in? %>
      <%= render "shared/navbar" %>
    <% end %>
    <div class="container-fluid bg-light">
      <% if notice %>
        <div class="row">
          <div class="col">
            <div class="alert alert-success m-3" role="alert"><%= notice %></div>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="row">
          <div class="col">
            <div class="alert alert-danger m-3" role="alert"><%= alert %></div>
          </div>
        </div>
      <% end %>

      <div class="row mt-3">
        <%= yield %>
      </div>
    </div>

  </body>

</html>
