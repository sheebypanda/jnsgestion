
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :categorie %>
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.input :adresse %>
    <%= f.input :complementadresse %>
    <%= f.input :cp %>
    <%= f.input :ville %>
    <%= f.input :pays %>
    <%= f.input :raisonsociale %>
    <%= f.input :tel %>
    <%= f.input :mobile %>
    <%= f.input :email %>
    <%= f.input :activite %>
    <%= f.input :url %>
    <%= f.input :siret %>
    <%= f.input :tva %>
    <%= f.input :commentaire %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
