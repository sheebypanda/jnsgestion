<h1>Contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Categorie</th>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Adresse</th>
      <th>Complementadresse</th>
      <th>Cp</th>
      <th>Ville</th>
      <th>Pays</th>
      <th>Raisonsociale</th>
      <th>Tel</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Activite</th>
      <th>Url</th>
      <th>Siret</th>
      <th>Tva</th>
      <th>Commentaire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.categorie %></td>
        <td><%= contact.nom %></td>
        <td><%= contact.prenom %></td>
        <td><%= contact.adresse %></td>
        <td><%= contact.complementadresse %></td>
        <td><%= contact.cp %></td>
        <td><%= contact.ville %></td>
        <td><%= contact.pays %></td>
        <td><%= contact.raisonsociale %></td>
        <td><%= contact.tel %></td>
        <td><%= contact.mobile %></td>
        <td><%= contact.email %></td>
        <td><%= contact.activite %></td>
        <td><%= contact.url %></td>
        <td><%= contact.siret %></td>
        <td><%= contact.tva %></td>
        <td><%= contact.commentaire %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
